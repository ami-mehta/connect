<html>
  <head>
    <link rel="stylesheet" href="style.css" />
    <title>Curmudgeons Anonymous</title>
    <script src="https://cdn.jsdelivr.net/npm/p5@1.3.0/lib/p5.js"></script>
    <script>
      let myObj = {};
      let inconsolata-black;
      function preload() {
        inconsolata = loadFont('assets/inconsolata-black.otf');
      }
      function setup() {
        createCanvas(windowWidth, windowHeight, WEBGL);
        let myVar = '<%- JSON.stringify(data) %>';
        myObj = JSON.parse(myVar);
        background('red');
      }
      function draw() {
        colorMode(HSB, 360, 100, 100);
        frameRate(5);
        text(
          random(myObj)[`answer${Math.floor(random(1, 5))}`],
          random(width),
          random(height),
          rotateX(random),
          rotateY(random)
        );
      }
    </script>
    <body>
      <% if (data.length > 0) { for (var i = 0; i < data.length; i++) { %>
      <div class="dataout" id="dataout<%= i %>">
        <a href="/displayrecord?_id=<%= data[i]._id%>">
          <%= data[i].answer1 %> <%= data[i].answer2 %> <%= data[i].answer3 %>
          <%= data[i].answer4 %>
        </a>
      </div>
      <% }} %>
    </body>
  </head>
</html>
